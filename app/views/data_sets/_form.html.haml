= form_for [@data_source, @data_set] do |f|
  - if @data_set.errors.any?
    #error_explanation
      %h2
        = pluralize(@data_set.errors.count, "error")
        prohibited this data_set from being saved:
      %ul
        - @data_set.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :uri
    %br/
    = f.text_field :uri
  .field
    = f.label :transform_script
    %br/
    = f.text_area :transform_script
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
