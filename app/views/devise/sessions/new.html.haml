%h2 Oliver Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %fieldset
    %legend Sign in
    .field
      = f.label :email
      %br/
      = f.email_field :email
    .field
      = f.label :password
      %br/
      = f.password_field :password
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    %p= f.submit "Sign in"
= render :partial => "devise/shared/links"
