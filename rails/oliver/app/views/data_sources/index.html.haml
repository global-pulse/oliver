%h1 Data Sources
%table
  %tr
    %th Name
    %th Url
    %th
  - @data_sources.each do |data_source|
    %tr
      %td= data_source.name
      %td= data_source.url

      %td
        = link_to tag(:span, {:class => 'ui-icon ui-icon-document'}), data_source
        = link_to tag(:span, {:class => 'ui-icon ui-icon-wrench'}), edit_data_source_path(data_source)
        = link_to tag(:span, {:class => 'ui-icon ui-icon-trash'}), data_source, :confirm => 'Are you sure?', :method => :delete


%br/
= link_to 'New Data source', new_data_source_path
